{
  "name": "error-sound-extension",
  "displayName": "Error Sound Extension",
  "description": "Play a custom sound when compilation or terminal/server errors occur.",
  "version": "0.0.2",
  "publisher": "ImpiusVenatus",
  "license": "SEE LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/ImpiusVenatus/error-sound-extention"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:errorSound.playTestSound",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Error Sound",
      "properties": {
        "errorSound.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Play the sound when files gain new diagnostics with severity Error."
        }
      }
    },
    "commands": [
      {
        "command": "errorSound.playTestSound",
        "title": "Error Sound: Play Test Sound"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "out/**",
    "FAHHH.wav",
    "package.json",
    "README.md",
    "LICENSE"
  ]
}
